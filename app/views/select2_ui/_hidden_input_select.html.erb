<% obj = hidden_input_select %>

<% if obj.form? %>
    <%= obj.form.hidden_field(obj.param_key, 
	:value=>obj.value, :style=>obj.css_style, 
        :class=>obj.css_class) %>
<% else %>
  <%=  hidden_field_tag(
      obj.id, obj.value, 
      :style=>obj.css_style, :class=>obj.css_class
      ) %>
<% end # obj.form? %>
