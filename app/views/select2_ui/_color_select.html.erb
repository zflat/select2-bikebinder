<% obj = color_select %>

<% if obj.multiple && obj.form? %>

  <%= obj.form.hidden_field(obj.param_key, :value=>obj.value, :style=>obj.css_style, :class=>obj.css_class) %>

<% elsif !obj.multiple? && obj.form? %>

  <%= obj.form.select(obj.param_key, options_for_select([['','']]+obj.optns_list, obj.value), options={}, 
      html_options = {:class=>obj.css_class, :style=>obj.css_style}) %>

<% elsif obj.multiple? && !obj.form? %>

    <%=  hidden_field_tag(
	 obj.id, obj.value, 
	 :style=>obj.css_style, :class=>obj.css_class
    ) %>

<% else !obj.multiple?  && !obj.form? %>

  <%= select_tag(obj.id, options_for_select([['','']]+obj.optns_list, obj.value), 
      :class=>obj.css_class, :style=>obj.css_style) %>

<% end %>
