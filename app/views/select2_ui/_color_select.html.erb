<% obj = color_select %>

<% if obj.multiple? %>

<%=  hidden_field_tag(
    obj.id, obj.value, 
    :style=>obj.css_style, :class=>obj.css_class
    ) %>
<% else %>

<%= select_tag(obj.id, options_for_select(obj.optns_list)) %>

<select id="<%= obj.id %>" style="<%= obj.css_style %>" class="<%= obj.css_class %>">
  <option value=""></option>
  <%   ColorNameI18n::keys.each do |k|     %>
  <% n = ColorNameI18n::Color.new(k).name.capitalize %>
  <option value="<%= k %>"><%= n %></option>
  <% end %>
</select>



<% end # if obj.multiple? %>
