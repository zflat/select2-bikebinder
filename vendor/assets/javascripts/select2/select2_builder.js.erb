    this.obj_merge = function(arr_objects){
	var obj = {}
	for(var i=0; i<arr_objects.length; i++){
	    jQuery.extend(true, obj, arr_objects[i])
	}
	return obj
    }

    this.Placeholder = function(msg_source, options){
	var msg = msg_source
	var is_compact = options.disp_compact
